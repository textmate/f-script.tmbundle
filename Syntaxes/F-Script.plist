{
	/* The name as it will appear in the Syntax Highlight List */
	name = "F-Script";
	scopeName = "source.f-script";
	uuid = "C2CB9A74-C9FC-4F63-8BAF-E64B72A60DD4";
	fileTypes = (fscript);

	foldingStartMarker = "\\[";
	foldingStopMarker = "\\]";

	increaseIndentPattern = "\\[";

	patterns = (
		{   name = "dummy.symbols.ignore.fscript";
			match = "(:|\\w):";
		},
		{   name = "other.symbols.fscript";
			match = ":\\w+\\b";
		},
		{   name = "other.blocks.compact.fscript";
			match = "#(\\l|_|[\\+=-/!%&*|><~?])(\\w|[\\+=-/!%&*|><~?:])*";
		},
		{   name = "constant.language.fscript";
			match = "\\b(true|YES|false|NO|sys|nil)\\b";
		},
		{   name = "comment.block.quotes.fscript";
			begin = '"'; end = '"';
		},
		{   name = "string.quoted.single.fscript";
			begin = "'"; end = "'";
		},
		{   name = "constant.numeric.fscript";
			match = "\\b((([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)\\b";
		},
	);
}
